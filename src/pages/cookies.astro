---
import Layout from "../layouts/Layout.astro";
import SectionContainer from '@components/Sections/SectionContainer.astro';
import language from "@data/i18n/es.json";

const { TITLE, DESCRIPTION, SECTIONS } = language.PAGES.COOKIE_POLICY;
---

<Layout simpleLogo title={TITLE} description={DESCRIPTION}>
  <main class="text-white flex flex-col items-center">
    <SectionContainer class="px-4 py-4">
      <h1>{TITLE}</h1>
      <p>{DESCRIPTION}</p>
    </SectionContainer>
    <SectionContainer class="px-4 py-4">
      <h2>{SECTIONS.WHAT_ARE.TITLE}</h2>
      {SECTIONS.WHAT_ARE.CONTENT.map((item) => (
        <p>{item}</p>
      ))}
    </SectionContainer>
    <SectionContainer class="px-4 py-4">
      <h2>{SECTIONS.TYPES.TITLE}</h2>
      <ul>
        {SECTIONS.TYPES.LIST.map(({ LABEL, DESCRIPTION }) => (
          <li>
            <strong>{LABEL}</strong> {DESCRIPTION}
          </li>
        ))}
      </ul>
    </SectionContainer>

    <SectionContainer class="px-4 py-4">
      <h2>{SECTIONS.TYPES.TITLE}</h2>
      <ul>
        {SECTIONS.TYPES.LIST.map(({ LABEL, DESCRIPTION }) => (
          <li>
            <strong>{LABEL}</strong> {DESCRIPTION}
          </li>
        ))}
      </ul>
    </SectionContainer>

    <SectionContainer class="px-4 py-4">
      <h2>{SECTIONS.THIRD_PARTY.TITLE}</h2>
      <ul>
        {SECTIONS.THIRD_PARTY.COOKIES.map(({NAME, PURPOSE, LINK_TEXT, URL}) => (
          <li class="mt-4">
            <h3><strong>{NAME}</strong></h3>
            <p>{PURPOSE}</p>
            <a href={URL} target="_blank" >{LINK_TEXT}</a>
          </li>
        ))}
      </ul>
    </SectionContainer>

    <SectionContainer class="px-4 py-4">
      <h2>{SECTIONS.DISABLING.TITLE}</h2>
      <p>{SECTIONS.DISABLING.CONTENT}</p>
      <ul>
        {SECTIONS.DISABLING.BROWSERS.map(({ NAME, URL }) => (
          <li><a href={URL} target="_blank">{NAME}</a></li>
        ))}
      </ul>
    </SectionContainer>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    @apply text-3xl md:text-4xl text-primary font-medium text-balance font-IBMCondensed mb-4;
  }
  h2 {
    @apply text-2xl md:text-3xl text-secondary font-medium text-balance font-IBMCondensed mb-2;
  }

  p, ul {
    @apply text-white text-lg md:text-xl font-thin text-pretty;
  }

  ul {
    @apply my-2
  }

  a {
    @apply text-secondary underline transition-colors;
  }

  a:hover {
    @apply text-primary;
  }
</style>
