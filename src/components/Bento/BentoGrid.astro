---
interface Props {
  cols?: number;
  class?: string;
  [key: string]: unknown;
  tag?: string;
}

const { cols = 3, class: className = '', tag = 'div', ...rest } = Astro.props;
const Tag = tag as string;
---

<Tag class:list={[
  "grid grid-cols-1 sm:grid-cols-2 gap-6 bento-grid",
  (cols >=10 || cols === 5) && "md:grid-cols-3 lg:grid-cols-5",
  (cols === 7 || cols === 8 || cols === 4) && "md:grid-cols-4",
  (cols === 6 || cols === 3 || cols === 9) && "md:grid-cols-3",
  cols === 2 && "md:grid-cols-2",
  cols === 1 && "md:grid-cols-1",
  className,
]} {...rest}>
  <slot></slot>
</Tag>