---
import SectionContainer from "@components/Sections/SectionContainer.astro";
import ListOfItems from "@components/ui/ListOfItems.astro";
import language from '@data/i18n/es.json';
import { content } from "tailwindcss/defaultTheme";

const { DISENO_WEB_GRATUITO } = language.PAGES
const { title: TITLE, content1, content2, items, id } = DISENO_WEB_GRATUITO.SECTIONS.STEPS
---

<SectionContainer class="mb-20" id={id}>
  <div
    class="w-full text-xl text-white flex flex-col gap-4"
  >
    <h2 class="text-4xl md:text-5xl text-accent font-medium font-IBMCondensed text-balance">{TITLE}</h2>
    <p class="pt-4 text-xl md:text-2xl font-light text-pretty">{content1}</p>
    <ListOfItems items={items} />
    <p class="px-6 py-3 border border-yellow-500 bg-slate-600/50 rounded-lg">{content2}</p>
  </div>
</SectionContainer>