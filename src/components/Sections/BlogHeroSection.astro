---
import SectionContainer from "./SectionContainer.astro";
import Blendy from "@components/Blendy.astro";
import Image from "astro/components/Image.astro";

const { title, subtitle, image, text, cta } = Astro.props
---
<SectionContainer class="pb-16 h-[calc(100vh-56px)] justify-center flex-col md:flex-row">
  <div class="flex-1 justify-center items-center flex">
    <div class="flex flex-col gap-8 items-center justify-center header-title">
      <div class="text-center">
        <h1 class="text-3xl md:text-5xl px-4 text-balance" set:html={title} />
      </div>
      <div class="text-white text-lg md:text-xl text-center px-8 font-thin text-pretty" set:html={text} />
    </div>
  </div>
  <div class="flex-1 flex justify-center items-center">
    <Image loading="eager" src={image.src} alt={image.alt} width={image.width} height={image.height} class="hero-image max-w-80" />
  </div>
</SectionContainer>

<style>
  .header-title {
    animation: moveInTop .5s ease-out;
  }

  h1 {
		line-height: 1.2;
		text-align: center;
	}

  .hero-image {
    animation: moveInBottom .5s ease-out;
  }
</style>