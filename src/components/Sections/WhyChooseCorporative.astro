---
import BentoItem from "@components/Bento/BentoItem.astro";
import SectionContainer from "./SectionContainer.astro";
import BentoGrid from "@components/Bento/BentoGrid.astro";
import language from '@data/i18n/es.json';
import Image from "astro/components/Image.astro";

const { TITLE, CONTENT, ITEMS } = language.PAGES.SERVICES.CORPORATIVE_WEB_DESIGN.WHY_CHOOSE_CORPORATIVE;
const { FIRST_ITEM, SECOND_ITEM, THIRD_ITEM, FOURTH_ITEM } = ITEMS;
---

<SectionContainer class="pb-16">
  <div
    class="w-full text-xl text-white flex flex-col gap-4 p-6"
  >
    <h2 class="text-3xl md:text-4xl font-IBMCondensed text-secondary font-medium text-balance">{TITLE}</h2>
    <p class="pt-4 text-xl md:text-2xl font-light text-pretty">{CONTENT}</p>
    <BentoGrid tag="ul" class="mt-8 flex flex-col gap-4">
      <BentoItem
        tag="li"
        class="bento-item sm:col-span-2 md:col-span-3 text-xl text-white flex flex-col md:flex-row gap-4"
      >
        <div class="flex flex-col justify-center items-center flex-[2]">
          <h3 class="text-2xl md:text-3xl text-primary font-medium text-balance font-IBMCondensed">{FIRST_ITEM.TITLE}</h3>
          <p class="pt-4 text-gray-300 font-extralight text-pretty">{FIRST_ITEM.CONTENT}</p>
        </div>
        <Image width={500} height={500} src={FIRST_ITEM.IMAGE || ''} alt={FIRST_ITEM.TITLE} class="flex-1 self-center max-w-80" />
      </BentoItem>
      <BentoItem
        tag="li"
        class="bento-item sm:col-span-2 md:col-span-3 text-xl text-white flex flex-col md:flex-row-reverse gap-4"
      >
        <div class="flex flex-col justify-center items-center flex-[2]">
          <h3 class="text-2xl md:text-3xl text-secondary font-medium text-balance font-IBMCondensed">{SECOND_ITEM.TITLE}</h3>
          <p class="pt-4 text-gray-300 font-extralight text-pretty">{SECOND_ITEM.CONTENT}</p>
        </div>
        <Image width={500} height={500} src={SECOND_ITEM.IMAGE || ''} alt={SECOND_ITEM.TITLE} class="flex-1 self-center max-w-80" />
      </BentoItem>
      <BentoItem
        tag="li"
        class="bento-item sm:col-span-2 md:col-span-3 text-xl text-white flex flex-col md:flex-row gap-4"
      >
        <div class="flex flex-col justify-center items-center flex-[2]">
          <h3 class="text-2xl md:text-3xl text-primary font-medium text-balance font-IBMCondensed">{THIRD_ITEM.TITLE}</h3>
          <p class="pt-4 text-gray-300 font-extralight text-pretty">{THIRD_ITEM.CONTENT}</p>
        </div>
        <Image width={500} height={500} src={THIRD_ITEM.IMAGE || ''} alt={THIRD_ITEM.TITLE} class="flex-1 self-center max-w-80" />
      </BentoItem>
      <BentoItem
        tag="li"
        class="bento-item sm:col-span-2 md:col-span-3 text-xl text-white flex flex-col md:flex-row-reverse gap-4"
      >
        <div class="flex flex-col justify-center items-center flex-[2]">
          <h3 class="text-2xl md:text-3xl text-secondary font-medium text-balance font-IBMCondensed">{FOURTH_ITEM.TITLE}</h3>
          <p class="pt-4 text-gray-300 font-extralight text-pretty">{FOURTH_ITEM.CONTENT}</p>
        </div>
        <Image width={500} height={500} src={FOURTH_ITEM.IMAGE || ''} alt={FOURTH_ITEM.TITLE} class="flex-1 self-center max-w-80" />
      </BentoItem>
    </BentoGrid>
  </div>
</SectionContainer>
