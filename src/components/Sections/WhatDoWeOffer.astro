---
import BentoItem from "@components/Bento/BentoItem.astro";
import SectionContainer from "./SectionContainer.astro";
import BentoGrid from "@components/Bento/BentoGrid.astro";
import language from '@data/i18n/es.json';
import Image from "astro/components/Image.astro";

const { TITLE, CONTENT, ITEMS } = language.PAGES.SERVICES.CUSTOM_WEB_DEVELOPMENT.WHAT_DO_WE_OFFER;
const {PERSONALIZATION, PERFORMANCE, INTEGRATIONS, SCALABILITY, SECURITY}  = ITEMS
---

<SectionContainer id="que-ofrecemos" class="mb-20">
  <BentoGrid>
    <BentoItem
      class="md:col-span-2 text-xl text-white flex flex-col gap-4 p-6 rounded-lg"
    >
      <h2 class="text-4xl md:text-5xl text-secondary font-medium text-balance font-IBMCondensed">{TITLE}</h2>
      <p class="pt-4 text-gray-300 font-extralight text-pretty">{CONTENT}</p>
    </BentoItem>

    <BentoItem tag="article" class="bg-violet-700 md:row-span-2 p-6 rounded-lg bento-item">
      <h3 class="text-2xl font-semibold font-IBMCondensed">{PERSONALIZATION.TITLE}</h3>
      <p class="pt-4 text-gray-300 font-extralight text-pretty">{PERSONALIZATION.CONTENT}</p>
      <Image width={500} height={500} src={PERSONALIZATION.IMAGE || ''} alt={PERSONALIZATION.TITLE} class="w-full object-cover rounded-lg mt-4" />
    </BentoItem>

    <BentoItem tag="article" class="bg-red-600 md:col-span-2 p-6 rounded-lg bento-item">
      <h3 class="text-2xl font-semibold mb-4 font-IBMCondensed">{PERFORMANCE.TITLE}</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <p class="pt-4 text-gray-300 font-extralight text-pretty">{PERFORMANCE.CONTENT}</p>
        <Image width={500} height={500} src={PERFORMANCE.IMAGE || ''} alt={PERFORMANCE.TITLE} />
      </div>
    </BentoItem>

    <BentoItem tag="article" class="bg-gradient-to-br from-yellow-400 to-orange-600 text-gray-900 md:row-span-2 p-6 rounded-lg bento-item">
      <h3 class="text-2xl font-semibold font-IBMCondensed">{INTEGRATIONS.TITLE}</h3>
      <p class="pt-4 font-extralight text-pretty">{INTEGRATIONS.CONTENT}</p>
      <Image width={500} height={500} src={INTEGRATIONS.IMAGE || ''} alt={INTEGRATIONS.TITLE} class="w-full object-cover rounded-lg mt-4" />
    </BentoItem>

    <BentoItem tag="article" class="bg-teal-600 md:row-span-2 p-6 rounded-lg bento-item">
      <h3 class="text-2xl font-semibold font-IBMCondensed">{SCALABILITY.TITLE}</h3>
      <p class="pt-4 text-gray-300 font-extralight text-pretty">{SCALABILITY.CONTENT}</p>
      <Image width={500} height={500} src={SCALABILITY.IMAGE || ''} alt={SCALABILITY.TITLE} class="w-full object-cover rounded-lg mt-4" />
    </BentoItem>

    <BentoItem tag="article" class="bg-gradient-to-br from-sky-300 to-sky-600 text-black md:row-span-2 p-6 rounded-lg bento-item">
      <h3 class="text-2xl font-semibold font-IBMCondensed">{SECURITY.TITLE}</h3>
      <p class="pt-4 font-extralight text-pretty">{SECURITY.CONTENT}</p>
      <Image width={500} height={500} src={SECURITY.IMAGE || ''} alt={SECURITY.TITLE} class="w-full object-cover rounded-lg mt-4" />
    </BentoItem>
  </BentoGrid>
</SectionContainer>
