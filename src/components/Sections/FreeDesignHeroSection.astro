---
import SectionContainer from "./SectionContainer.astro";
import language from '@data/i18n/es.json';
import Blendy from "@components/Blendy.astro";
const { PRETITLE, TITLE, SUBTITLE, PARAGRAPH, CTA } = language.PAGES.DISENO_WEB_GRATUITO.SECTIONS.HERO
---

<SectionContainer class="pb-16 h-[calc(100vh-56px)]">
  <div class="flex flex-col gap-8 items-center justify-center header-title">
    <div class="text-center">
      <span class="text-sm md:text-xl px-4 font-normal text-balance m-auto font-IBMCondensed">{PRETITLE}</span>
      <h1 class="text-4xl md:text-6xl px-4 text-balance" set:html={TITLE} />
      <h2 class="text-2xl md:text-4xl px-4 text-balance" set:html={SUBTITLE} />
    </div>
    <p class="text-white text-lg md:text-xl text-center px-8 font-thin text-pretty">{PARAGRAPH}</p>
    <Blendy id="hero" text={CTA} type="FREE_DESIGN" />
  </div>
</SectionContainer>

<style>
  .header-title {
    animation: moveInTop .5s ease-out;
  }

  .hero {
    height: calc(100vh - 56px);
  }

  h1 {
		line-height: 1.2;
		text-align: center;
	}

</style>