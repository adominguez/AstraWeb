---
const { title, description, image } = Astro.props;
const { pathname } = Astro.url;
const isHome = pathname === '/';

const SCHEMAS = {
  HOME: {
    "@context": "https://schema.org",
    "@type": "Organization",
    "url": "https://www.astrahub.dev/",
    "logo": "https://www.astrahub.dev/favicon.svg",
    "name": "AstraHub",
    "title": {title},
    "description": {description},
    "image": {
      "@type": "ImageObject",
      "url": image,
      "width": 1200,
      "height": 630
    }
  },
  DEFAULT: {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "url": "https://www.astrahub.dev/",
    "name": "AstraHub",
    "description": "AstraHub es un espacio de aprendizaje y desarrollo de proyectos web con tecnolog√≠as modernas.",
    "publisher": {
      "@type": "Organization",
      "name": "AstraHub",
      "logo": {
        "@type": "ImageObject",
        "url": "https://www.astrahub.dev/favicon.svg"
      }
    },
    "image": {
      "@type": "ImageObject",
      "url": image,
      "width": 1200,
      "height": 630
    }
  }
};

const schema = isHome ? SCHEMAS.HOME : SCHEMAS.DEFAULT;
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />